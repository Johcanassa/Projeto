<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gaadicrianca"
    android:backgroundTint="#000A0707"
    tools:context=".LardosIdosos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/txtidosos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:gravity="center"
            android:text="LAR MELHOR IDADE"
            android:textColor="#D0201616"
            android:textSize="36sp"
            android:textStyle="bold|italic"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ididosos"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                app:srcCompat="@drawable/lardeidosos" />

            <TextView
                android:id="@+id/txtendereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:breakStrategy="simple"
                android:text="Responsável:José Antonio \n Endereço: Pça. dos 3 Poderes, 1000 - Jardim Marabá ITAPETININGA - SP, 18213-900 Brasil \n Fone: (15) 3271.9049  E-mail:laridodos@ig.com.br \n Horário de Funcionamento: Seg a Sáb/08 - 17 hrs"
                android:textAlignment="gravity"
                android:textColor="#F31F1C1C"
                android:textSize="19sp"
                android:textStyle="italic">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/txtidoso"
            android:layout_width="413dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:breakStrategy="simple"
            android:text="@string/idosos"
            android:textAlignment="inherit"
            android:textColor="#DF1F1C1C"
            android:textSize="24sp"
            android:textStyle="italic">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/txttipodoacao"
            android:layout_width="423dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:breakStrategy="high_quality"
            android:gravity="fill_horizontal"
            android:text="Tipo de Doações que Recebe: \n Alimentos \n Roupas \n Sapatos \n Trabalhos Voluntários"
            android:textAlignment="viewStart"
            android:textColor="#DF1F1C1C"
            android:textSize="20sp"
            android:textStyle="bold|italic">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/idlocalizar"
                android:layout_width="147dp"
                android:layout_height="107dp"
                android:layout_gravity="clip_horizontal"
                app:srcCompat="@drawable/localizacao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="129dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/idwhats"
                    android:layout_width="121dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/whatsapplogo" />


            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</ScrollView>